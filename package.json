{
  "name": "kirby-ui",
  "description": "Kirby Next: UI Kit",
  "version": "1.0.0",
  "author": "Bastian Allgeier <mail@bastianallgeier.com>",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack --progress --watch",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "fractal": "fractal start --sync",
    "lint:js": "eslint ./components && true",
    "lint": "npm-run-all lint:js --silent",
    "test": "karma start karma.conf.js --single-run",
    "test:watch": "karma start karma.conf.js",
    "api": "php -S localhost:8000 -t ./kirby",
    "start": "npm-run-all --parallel dev fractal api"
  },
  "dependencies": {
    "@frctl/fractal": "^1.1.4",
    "vue": "^2.4.0",
    "vue-router": "^2.7.0",
    "vuedraggable": "^2.14.1",
    "vuex": "^2.3.1"
  },
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-loader": "^6.0.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.5.1",
    "cross-env": "^3.0.0",
    "css-loader": "^0.25.0",
    "eslint": "^4.1.1",
    "file-loader": "^0.9.0",
    "jasmine-core": "^2.6.3",
    "karma": "^1.7.0",
    "karma-jasmine": "^1.1.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-webpack": "^2.0.3",
    "node-sass": "^4.5.0",
    "npm-run-all": "^4.0.2",
    "phantomjs": "^2.1.7",
    "sass-loader": "^5.0.1",
    "sass-resources-loader": "^1.2.1",
    "vue-loader": "^13.0.2",
    "vue-template-compiler": "^2.4.1",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5",
    "whatwg-fetch": "^2.0.3"
  }
}
